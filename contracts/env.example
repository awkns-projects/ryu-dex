# Private key for deployment (NEVER commit this file with real key)
PRIVATE_KEY=your_private_key_here

# Sepolia Testnet RPC (for testing)
SEPOLIA_RPC=https://eth-sepolia.g.alchemy.com/v2/your_alchemy_api_key
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Etherscan API key (for Sepolia verification)
ETHERSCAN_API_KEY=your_etherscan_api_key

# RPC URLs (optional, defaults are provided in hardhat.config.js)
HYPERLIQUID_TESTNET_RPC=https://api.hyperliquid-testnet.xyz/evm
HYPERLIQUID_MAINNET_RPC=https://api.hyperliquid.xyz/evm
HYPERLIQUID_MAINNET_CHAIN_ID=998

# Explorer API key (if needed for verification)
HYPERLIQUID_EXPLORER_API_KEY=your_api_key_here

# Gas reporter (optional)
REPORT_GAS=false
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Contract deployment configuration
NFT_COLLECTION_NAME=My NFT Collection
NFT_COLLECTION_SYMBOL=MNFT
NFT_COLLECTION_URI=ipfs://your_collection_metadata_uri
NFT_MAX_SUPPLY=10000
NFT_MINT_PRICE=0

# Payment token for minting (leave as 0x0000000000000000000000000000000000000000 for native HYPE, or set to USDC address for USDC minting)
NFT_PAYMENT_TOKEN=0x0000000000000000000000000000000000000000

# Marketplace configuration
MARKETPLACE_PLATFORM_FEE=250
MARKETPLACE_FEE_RECIPIENT=0x_your_fee_recipient_address

# USDC token address (network-specific)
# Sepolia USDC: 0x1c7D4B196Cb0C7B01d743Fbc6116a902379C7238
# Hyperliquid: 0x_usdc_contract_address_on_hyperliquid
USDC_ADDRESS=0x_usdc_contract_address

