# ===================================
# Docker Compose Development Environment Variables
# ===================================
# Copy this file to .env and fill in your values
# cp env.dev.template .env

# ===================================
# PostgreSQL Database Configuration
# ===================================
POSTGRES_USER=ryu_user
POSTGRES_PASSWORD=ryu_password
POSTGRES_DB=ryu_db
POSTGRES_PORT=5432

# ===================================
# Go Backend Configuration
# ===================================
NOFX_BACKEND_PORT=8080
NOFX_TIMEZONE=UTC

# Encryption Keys (REQUIRED - generate using scripts/setup_encryption.sh)
DATA_ENCRYPTION_KEY=your_data_encryption_key_here_min_32_chars
JWT_SECRET=your_jwt_secret_here_min_32_chars

# AI Configuration
AI_MAX_TOKENS=4000

# ===================================
# Next.js Frontend Configuration
# ===================================
RYU_NEXT_PORT=3000
NODE_ENV=development

# App URL (for email links, OAuth callbacks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# SQLite Database Path (for accessing Go backend's config.db)
# In Docker, this is automatically set to /data/config.db
# SQLITE_DB_PATH=/data/config.db

# ===================================
# Optional: Thirdweb/NFT Configuration
# ===================================
# Get your client ID from https://thirdweb.com/dashboard/settings
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=
NEXT_PUBLIC_NETWORK=testnet

# ===================================
# Optional: Stripe Configuration (for subscriptions)
# ===================================
# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# ===================================
# Optional: Email Configuration (Resend)
# ===================================
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=
RESEND_FROM_EMAIL=ryu@example.com

# ===================================
# Optional: Vercel Configuration (for deployment features)
# ===================================
VERCEL_TOKEN=
VERCEL_TEAM_ID=

# ===================================
# Database Visualization Tools
# ===================================
# pgAdmin (PostgreSQL Management)
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@ryu.local
PGADMIN_PASSWORD=admin

# SQLite Web Viewer
SQLITE_WEB_PORT=8081

